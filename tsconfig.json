{
  "include": ["**/*.ts", "**/*.tsx", "app/routes/.server/index.tsx"],
  "compilerOptions": {
    "noImplicitAny": false,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@remix-run/node", "node", "vite/client", "jest"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"]
    }
  }
}
